<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/wallpaperImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="6dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton1"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginBottom="16dp"

        android:src="@drawable/ic_refresh_black_small"
        android:background="@drawable/roundcorner"
        />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="@dimen/round_icon_big"
        android:layout_height="@dimen/round_icon_big"
        android:elevation="6dp"

        app:layout_constraintStart_toEndOf="@id/imageButton0"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginBottom="24dp"

        android:src="@drawable/ic_check_black_big"
        android:background="@drawable/roundcorner"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="@dimen/round_icon_small"
        android:layout_height="@dimen/round_icon_small"
        android:elevation="6dp"

        app:layout_constraintStart_toEndOf="@id/imageButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"

        android:background="@drawable/roundcorner"
        />


</android.support.constraint.ConstraintLayout>